<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="WELCOME TO"
                android:textSize="40sp"
                android:gravity="bottom" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="TAKE PART IN OUR SURVEY!"
                android:textSize="20sp" />

            <Button
                android:id="@+id/start"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btn_start"
                android:text="Load" />



            <TextView
                android:id="@+id/language"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="language"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:visibility="invisible"
                android:layout_marginTop="30dp"
                android:text="Before we start, here are things you should know:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:visibility="invisible"
                android:text="-Please be honest when making your choice."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="-We are just doing a research so you don't have to fake your information."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="-Please follow the step we designed for you an don't skip any questions."
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="I accept these requests." />

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:onClick="btn_start"
                android:text="LET'S START!" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>